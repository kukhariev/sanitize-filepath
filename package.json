{
  "name": "sanitize-filepath",
  "version": "0.0.6",
  "description": "safe filename and path",
  "keywords": [
    "filename",
    "filepath",
    "sanitize"
  ],
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.ts"
    }
  },
  "engines": {
    "node": ">=14.18.20"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --out-dir lib",
    "build:watch": "npm run build -- --watch src",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "lint": "biome check src examples",
    "format": "biome format --write src examples",
    "example": "node ./examples/example.mjs",
    "benchmark": "node ./examples/benchmark.mjs"
  },
  "author": {
    "name": "kukhariev",
    "email": "q_h@inbox.ru"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kukhariev/sanitize-filepath.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.0.0",
    "@types/chai": "4.3.5",
    "@types/mocha": "10.0.1",
    "@types/node": "20.2.5",
    "chai": "4.3.7",
    "mitata": "^0.1.6",
    "mocha": "10.2.0",
    "sanitize-filename": "^1.6.3",
    "ts-node-dev": "2.0.0",
    "tsup": "^6.7.0",
    "typescript": "5.1.3"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "**/*.spec.ts",
    "require": "ts-node/register"
  }
}
